- provide(:title, @post.title)
- provide(:url, request.url)


%article.post-contents.bg-light
  %section#post-list-section
    .container
      .row
        .col-lg-12.mx-auto.my-3.p-3.bg-white
          .row
            .col-lg-12.headings.page-title.m-2.p-2
              %h1= @post.title
            .col-lg-4.date-text
              %p.text-muted
                投稿日:
                = @post.published_at
            .col-lg-8.sns-share-container.d-flex.justify-content-right.align-items-right
          %hr
          .content.m-3.p-2
            = raw markdown @post.body
