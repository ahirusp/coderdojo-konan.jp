-# frozen_string_literal: true
= simple_form_for(@post) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :body
    = f.input :title
    = f.input :published_at
    = f.input :author_id
    = f.input :slug

  .form-actions
    = f.button :submit
